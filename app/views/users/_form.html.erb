<div class="container-fluid">
  <!-- Breadcrumbs-->
  <div class="same-line">
    <ol class="breadcrumb first">
      <li class="breadcrumb-item">
        <a href="#">Dashboard</a>
      </li>
      <li class="breadcrumb-item active">User</li>
    </ol>
    <div class="myBtnDiv">
      <a href="/transaction_type"></a>
    </div>
  </div>
  <div class="container">
    <div class="card card-register mx-auto">
      <div class="card-header">Register an Account</div>
      <div class="card-body">
        <%= form_for @user do |f| %>
          <% if @user.errors.present? %>
          <p>
            <%= @user.errors.full_messages.join(', ') %>
          </p>
          <% end %>
          <div class="form-group">
            <div class="form-row">
              <div class="col-md-6">
                <%= f.label :first_name %>
                <%= f.text_field :first_name, class: 'form-control', placeholder: 'Enter the first name' %>
              </div>
              <div class="col-md-6">
                <%= f.label :last_name %>
                <%= f.text_field :last_name, class: 'form-control', placeholder: 'Enter the last name' %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, class: 'form-control', placeholder: 'Enter the email address' %>
          </div>
          <div class="form-group">
            <div class="form-row">
              <div class="col-md-6">
                <%= f.label :password_digest%>
                <%= f.password_field :password_digest, class: 'form-control', placeholder:"Choose a Password"%>
              </div>
              <div class="col-md-6">
                <%= f.label :password_confirmation%>
                <%= f.password_field :password_confirmation, class: 'form-control', placeholder:"confirm your Password"%>
              </div>
            </div>
          </div>
          <%= f.submit class: 'btn btn-primary btn-block'%>
        <% end %>
        <div class="text-center">
          <a class="d-block small mt-3" href="login.html">Login Page</a>
          <a class="d-block small" href="forgot-password.html">Forgot Password?</a>
        </div>
      </div>
    </div>
  </div>
</div>
