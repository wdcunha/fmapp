
<div class="container-fluid">
  <!-- Breadcrumbs-->
  <div class="same-line">
    <ol class="breadcrumb first">
      <li class="breadcrumb-item">
        <a href="#">Dashboard</a>
      </li>
      <li class="breadcrumb-item active">Transaction Register</li>
    </ol>
    <div class="myBtnDiv">
      <a href="<%= transactions_path %>">Index</a>
    </div>
  </div>

  <div class="container">
    <div class="col-lg-12">
    <%= form_for @transac, html: {class:'form-horizontal', id:'reg_form'} do |f| %>
    <% if @transac.errors.present? %>
      <p>
      <%= @transac.errors.full_messages.join(', ') %>
      </p>
    <% end %>

      <fieldset>
        <!-- Form Name -->
      <legend> Transaction Registration </legend>
      <!-- Text input-->
      <div class="form-group">
        <div class="form-row">
          <div class="col-md-8  inputGroupContainer">
            <%= f.label :details %>
            <div class="input-group">
              <%= f.text_field :details, class: 'form-control', placeholder: 'Here goes the details' %>
            </div>
          </div>
          <div class="col-md-4  inputGroupContainer">
            <%= f.label :transaction_type %>
            <div class="input-group">
              <% transacTypes = TransactionType.all.map { |transacType| [transacType.description, transacType.id] } %>
              <%= f.select :transaction_type_id, options_for_select(transacTypes), {}, {class: 'custom-select', placeholder: 'Here goes the transaction type'} %>
            </div>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="form-row">
          <div class="col-md-8  inputGroupContainer">
            <%= f.label :date %>
            <div class="input-group">
              <%= f.date_select :date, {}, id:'date', class: 'form-control', placeholder: 'Here goes the date' %>
            </div>
          </div>
          <div class="col-md-4  inputGroupContainer">
            <%= f.label :value %>
            <div class="input-group">
              <%= f.text_field :value, id:'value', class: 'form-control', placeholder: 'Here goes the value' %>
            </div>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="form-row">
          <div class="col-md-4  inputGroupContainer">
            <%= f.label :transac_categ, value: 'Category'%>
            <div class="input-group">
              <% transacCats = TransacCateg.all.map { |transacCat| [transacCat.title, transacCat.id] } %>
              <%= f.select :transac_categ_id, options_for_select(transacCats), {}, {class: 'custom-select', placeholder: 'Here goes the transaction category'} %>
            </div>
          </div>
          <div class="col-md-4  inputGroupContainer">
            <%= f.label :entity %>
            <div class="input-group">
              <% entities = Entity.all.map { |entitie| [entitie.name, entitie.id] } %>
              <%= f.select :entity_id, options_for_select(entities), {}, {class: 'custom-select', placeholder: 'Here goes the entity', multiple: false} %>
            </div>
          </div>
          <div class="col-md-4  inputGroupContainer">
            <%= f.label :payee_customer, value: 'Payee/Customer'%>
            <div class="input-group">
              <% payeeCusts = PayeeCustomer.all.map { |payeeCust| [payeeCust.name, payeeCust.id] } %>
              <%= f.select :payee_customer_id, options_for_select(payeeCusts), {}, {class: 'custom-select', placeholder: 'Here goes the transaction category'} %>
            </div>
          </div>
        </div>
      </div>
      <!-- Button -->
      <div class="form-group">
        <div class="col-md-4">
          <%= f.submit class: 'btn btn-warning' %>
        </div>
      </div>
    </fieldset>
    <% end %>
    </div>
  </div>
</div>
