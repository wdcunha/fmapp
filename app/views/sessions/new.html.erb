<div class="container">
  <div class="card card-login mx-auto mt-5">
    <div class="card-header">Sign in Page</div>
    <div class="card-body">
      <%= form_for :session, url: session_path do |f| %>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control', placeholder: 'Enter the email address' %>
        </div>
        <div class="form-group">
          <%= f.label :password_digest%>
          <%= f.password_field :password_digest, class: 'form-control', placeholder:"Type your Password here"%>
        </div>
        <div class="form-group">
          <div class="form-check">
            <label class="form-check-label">
              <input class="form-check-input" type="checkbox"> Remember Password</label>
          </div>
        </div>
        <%= f.submit class: 'btn btn-primary btn-block'%>
      <% end %>
      <div class="text-center">
        <a class="d-block small mt-3" href="register.html">Register an Account</a>
        <a class="d-block small" href="forgot-password.html">Forgot Password?</a>
      </div>
    </div>
  </div>
</div>
