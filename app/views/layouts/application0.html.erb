<!DOCTYPE html>
<html>
  <head>
    <title>Blog Post</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header class="container">
      <nav id="nav-bootstrap-override" class="navbar navbar-light d-inline d-sm-inline-flex">
          <a class="navbar-brand" href="/">
            <img src="/assets/post_imag.jpeg" height="30" class="d-inline-block align-top">
          </a>
          <div class="menu float-right">
            <a href="/" class="bar">Home</a>
            |
              <%= link_to 'Sign Up', new_user_path %>
          </div>
      </nav>
    </header>

      <div class="container">

        <% if flash[:success].present? %>
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= flash[:success] %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
        <% elsif flash[:danger].present? %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= flash[:danger] %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
        <% end %>
      </div>

      <%= yield %>
  </body>
  <footer class="container sm">WÂ© 2018 ==> Bootcamp CodeCore Cohort 21</footer>
</html>
